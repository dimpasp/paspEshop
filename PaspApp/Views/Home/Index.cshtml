@{
    ViewData["Title"] = "Home Page";
}

<head>
    <style>
        .carousel-item {
            height: 400px;
        }
    </style>
</head>

<div class="container-fluid">
    <h1 class="display-4" style="text-align:center"> Welcome to our Eshop</h1>
    <hr />
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/eshop.png" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/digital-marketing.jpg" />
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/ecommerce-tips.jpg" />
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
