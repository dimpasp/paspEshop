@model PaspCore.Model.CustomerForm

@{
    ViewData["Title"] = "Add Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Customer Details</h2>
@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Firstname)
        @Html.TextBoxFor(m => m.Customer.Firstname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Firstname)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Lastname)
        @Html.TextBoxFor(m => m.Customer.Lastname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Lastname)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Phone)
        @Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Phone)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Password)
        @Html.TextBoxFor(m => m.Customer.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Password)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Email)
        @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Email)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.WholesaleCustomer) Are you a whole sale customer?
        </label>
    </div>
    @Html.HiddenFor(m => m.Customer.Id)    
    <button type="submit" class="btn btn-primary">Save</button>
}
