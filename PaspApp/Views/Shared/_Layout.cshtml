<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <style>
        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }
        footer {
            background-color: #555;
            color: white;
            padding: 15px;
        }
    </style>
</head>
<body style="background-color:darkgray">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarWithLogOut"
                aria-controls="navbarWithLogOut" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">PaspApp.com</a>
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" style="color:white" asp-area="" asp-controller="Home" asp-action="Index">Home<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="color:white" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                    </li>
                    <li class="dropdown">
                        <button class="btn" style="color:white" type="button" data-toggle="dropdown">Contact</button>
                        <ul class="dropdown-menu bg-dark">
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Contact" asp-action="Index">Where we are</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Customer" asp-action="SendMail">Send Mail</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Contact" asp-action="newsLetter">Subscribe</a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <button class="btn" style="color:white" type="button" data-toggle="dropdown">Products</button>
                        <ul class="dropdown-menu bg-dark">
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Product" asp-action="Search">All</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Product" asp-action="Search">Category 1</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color:white" asp-area="" asp-controller="Product" asp-action="Search">Category 2</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav ml-auto bg-dark">
                        <li class="nav-item" style="position:absolute;left:1700px;top:20px">
                            <a class="nav-link" style="color:white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item" style="position:absolute;left:1650px;top:20px">
                            <a class="nav-link" style="color:white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="site-footer-bottom">
        <div class="container">
            <div class="row">
                <div class="copyrights-col-left col-md-6 col-sm-6">
                    <p>&copy; @DateTime.Now.Year PaspApp.</p>
                </div>
                <div class="copyrights-col-right col-md-6 col-sm-6">
                    <div class="social-icons">
                        <a class="site-footer-bottom" href="https://www.instagram.com" aria-label="Instagram" target="_blank" rel="noopener"></a>
                        <a class="site-footer-bottom" href="http://facebook.com" aria-label="Facebook" target="_blank" rel="noopener"></a>
                        <a class="site-footer-bottom" href="http://twitter.com" aria-label="Twitter" target="_blank" rel="noopener"></a>
                        <a class="site-footer-bottom" href="https://www.linkedin.com" aria-label="LinkedIn" target="_blank" rel="noopener"></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>


